{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<br>

	<div class="col-sm-5 badge bg-primary">
		<h4>Inscription d'un nouveau utilisateur</h4>
	</div>
	<br>

	<div class="col-sm-5">
		<br>
		<center>
			<img id="Photo" style="width:60px" src="{{ asset('images/login/anonyme.png') }}"/>
		</center>
	</div>
	<div class="col-sm-5">
		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.nomutilisateur,{'attr': {'class': 'form-control', 'placeholder': 'Nom utilisateur ...'}}) }}
		{{ form_row(registrationForm.email,{'attr': {'class': 'form-control', 'placeholder': 'Email ...'}}) }}
		{{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control', 'placeholder': 'Mot de passe ...'}}) }}
		{{ form_row(registrationForm.agreeTerms,{'attr': {'class': 'form-check-input'}}) }}
		<br>
		<button type="submit" class="btn btn-primary">Register</button>
		{{ form_end(registrationForm) }}
	</div>
</div>{% endblock %}
